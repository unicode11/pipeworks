<Window x:Class="pipeworks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Background="#1a2028"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:pipeworks.app"
        Title="pipeworks" Height="600" Width="649">
    <Window.Resources>
        <!-- common button -->
        <Style x:Key="ServiceButton" TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="ToolTipService.ShowDuration" Value="3000"/>
            <Setter Property="Background" Value="#2a3657"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- pizda xaml xueta -->

    </Window.Resources>
    <!-- ресурсы говно закончились стак алмазов отдай -->
    
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="ItemsListColumn" Width="250"/>
            <ColumnDefinition Width="494*"/>
        </Grid.ColumnDefinitions>

        
        <!-- ВСЯ ЭТА ХУЙНЯ - ЛЕВО -->
        
        
        <DockPanel x:Name="ItemsListDocker"
                   Grid.Column="0">
            <Grid x:Name="ItemsListGrid">
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="ServiceRow" Height="30" />
                    <RowDefinition x:Name="ItemsListRow" Height="*" />
                </Grid.RowDefinitions>
                
                <ListBox Grid.Row="0"
                    Background="#354457"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    >
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ></StackPanel>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBoxItem><Button
                        Name="ButtonPlus"
                        Style="{StaticResource ResourceKey=ServiceButton}"
                        ToolTip="Add new instance"
                        Click="AddGame">
                        <materialDesign:PackIcon Kind="Plus" Width="20" Height="20" Foreground="White"/>
                    </Button></ListBoxItem>
                    <ListBoxItem><Button
                        Name="ButtonMinus"
                        Style="{StaticResource ResourceKey=ServiceButton}"
                        ToolTip="Delete instance from list"
                        Click="DeleteGame">
                        <materialDesign:PackIcon Kind="Minus" Width="20" Height="20" Foreground="White"/>
                    </Button></ListBoxItem>
                    <ListBoxItem><Button
                        Name="ButtonReload"
                        Style="{StaticResource ResourceKey=ServiceButton}"
                        ToolTip="Refresh list"
                        Click="Refresh">
                        <materialDesign:PackIcon Kind="Reload" Width="20" Height="20" Foreground="White"/>
                    </Button></ListBoxItem>
                    <ListBoxItem><Button
                        Name="ButtonNine"
                        Style="{StaticResource ResourceKey=ServiceButton}"
                        ToolTip="ᗜ˰ᗜ"
                        Click="SecretButton">
                        <materialDesign:PackIcon Kind="NumericNine" Width="20" Height="20" Foreground="White"/>
                    </Button></ListBoxItem>
                </ListBox>
                
                <ScrollViewer Grid.Row="1" >
                    <ListBox 
                        x:Name="GameList"
                        Background="#374455"
                        BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:Game}">
                                <Border Margin="0 5" Padding="10"
                                        Background="#171e30"
                                        CornerRadius="5"
                                        Effect="{DynamicResource Shadow}">
                                    <DockPanel VerticalAlignment="Center">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="White"/>
                                            <TextBlock Text="{Binding Name, Mode=TwoWay}"
                                                       FontSize="12"
                                                       Foreground="#c7d5e0"
                                                       Margin="0,4,0,0"/>
                                            <TextBlock Text="{Binding Playtime, Mode=TwoWay}"
                                                       FontSize="12"
                                                       Foreground="#c7d5e0"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </DockPanel>
        
        <!-- ВСЯ ЭТА ХУЙНЯ - ПРАВО -->
        <Grid x:Name="RightGrid" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="155"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            
            <DockPanel Grid.Row="0" Background="#1d232b">
                <StackPanel VerticalAlignment="Bottom"
                            Orientation="Horizontal"
                            Background="#212832" 
                            Height="30">
                            <ListBoxItem VerticalAlignment="Center">
                                <Button
                                Name="PlayButton"
                                Style="{StaticResource ResourceKey=ServiceButton}"
                                Width="150"
                                ToolTip="Launch app executable"
                                Click="PlayGame">
                                <materialDesign:PackIcon Kind="Play" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            </ListBoxItem>    
                            <ListBoxItem VerticalAlignment="Center">
                                <Button
                                Name="BrowseLocalFiles"
                                Style="{StaticResource ResourceKey=ServiceButton}"
                                ToolTip="Browse local files"
                                Click="BrowseFiles">
                                <materialDesign:PackIcon Kind="Folder" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            </ListBoxItem>
                            <ListBoxItem VerticalAlignment="Center">
                                <Button
                                Name="EditButton"
                                Style="{StaticResource ResourceKey=ServiceButton}"
                                ToolTip="Edit instance"
                                Click="BrowseFiles">
                                <materialDesign:PackIcon Kind="Pencil" Width="20" Height="20" Foreground="White"/>
                            </Button>
                            </ListBoxItem>  
                        </StackPanel>
                    </DockPanel>
                    
                    <DockPanel Grid.Row="1" Background="#415063">
                        <Border
                            DockPanel.Dock="Top"
                            Background="#212832"
                            CornerRadius="10"
                            Margin="5,10,5,5"
                            Padding="10,5,10,10"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                        >
                            <TextBlock
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="32"
                                FontFamily="Comic Sans MS"
                                Foreground="#FFFFFF"
                                Text="xui"
                            >
                            </TextBlock>
                        </Border>
                        <Border
                            DockPanel.Dock="Top"
                            Background="#2f3947"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            Margin="5,2,3,0"
                            Padding="5,5,5,5"
                            CornerRadius="5"
                        >
                            <TextBlock
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                FontSize="15"
                                FontFamily="Comic Sans MS"
                                Foreground="#FFFFFF"
                                TextWrapping="Wrap"
                            >
                                Обычный текст
                                Компонент-текст позволяет добавлять текст на страницу и форматировать его с помощью стилей, заданных в теме. Панель инструментов форматирования недоступна при редактировании содержимого, поэтому невозможно перезаписать выбранный стиль пользовательским форматированием.

                                Это полезно, если используется стандартное форматирование для таких элементов, как заголовки. Можно обновить стили, определенные в теме, и автоматически обновить связанный текст на сайте без перезаписи формата.

                                Добавление компонента-текста:
                            </TextBlock>                    
                        </Border>
                        <Border
                            DockPanel.Dock="Bottom"
                            Background="#1c232b"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,5"
                            Padding="0,0,0,0"
                            CornerRadius="2"
                        >
                            <TextBlock
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                FontFamily="Comic Sans MS"
                                Text="idi nakhui"
                                Foreground="#FFFFFF"
                            >
                            </TextBlock>
                    </Border>
            </DockPanel>
        </Grid>
    </Grid>
</Window>