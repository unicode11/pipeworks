<Window x:Class="pipeworks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-pipeworkspace:pipeworks"
        mc:Ignorable="d"
        Background="#1a2028"
        Title="pipeworks" Height="600" Width="649">
    <Grid x:Name="mainGrid" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="itemsListColumn" Width="155"/>
            <ColumnDefinition Width="494*"/>
        </Grid.ColumnDefinitions>

        <DockPanel x:Name="itemsListDocker" Background="#FF364458" Grid.Row="1" 
        >
            <ListBox x:Name="itemsList" Width="149" d:ItemsSource="{d:SampleData ItemCount=5}" Background="{x:Null}" FontFamily="Segoe UI" FontSize="10"/>
        </DockPanel>


    </Grid>
</Window>